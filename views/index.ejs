<%- include('partials/header', {title: 'All Posts'}) %>
    <h1>Random Scribbles</h1>
    <% for(post of posts) { %>
        <div class="post">
            <h3 class="user">@<%= post.username %> </h3>
            <h4 class="content"> <%= post.content %> </h4>
            <br>
            <a href="http://localhost:3001/posts/<%=post.id%>">See in Detail</a>
            <a href="http://localhost:3001/posts/<%=post.id%>/edit">Edit</a>
            
            <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
            <button>Delete Post</button>
            </form>
        </div>
    <% } %>
    <br>
    <br>

    <a href="http://localhost:3001/posts/new">Create New Post...</a>
</body>
</html>
